{
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab",
        "formatWithErrors": false,
        "attributePosition": "auto",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 80
    },

    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "useOptionalChain": "off",
                "noForEach":"off",
                "noStaticOnlyClass": "off"
            },
            "suspicious": {
                "noExplicitAny": "warn"
            },
            "a11y": {
                "noSvgWithoutTitle": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}